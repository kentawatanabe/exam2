<%= form_for(@picture) do |f| %>
  <%= f.error_messages! %>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <br>
  <%= f.label :内容 %>
  <%= f.text_field :content, class: "form-control" %>
  <br>
  <%= f.submit "投稿", class: 'btn btn-primary btn-block' %>
<% end %>
<%= link_to "ブログ一覧画面に戻る", pictures_path %>
